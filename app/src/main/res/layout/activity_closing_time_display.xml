                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/friday"
                android:textSize="@dimen/genericTextSize"/>
            <TextView
                android:background="@drawable/cell_closing_time"
                android:id="@+id/friday_closing_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/test_time"
                android:textSize="@dimen/genericTextSize"/>
        </TableRow>
        <TableRow
            android:id="@+id/saturday_closing_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontalMarginClosingTimes"
            android:layout_marginRight="@dimen/horizontalMarginClosingTimes"
            android:orientation="horizontal"
            android:weightSum="6">
            <TextView
                android:background="@drawable/cell_border"
                android:id="@+id/saturday_closing_time_weekday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/saturday"
                android:textSize="@dimen/genericTextSize"/>
            <TextView
                android:background="@drawable/cell_closing_time"
                android:id="@+id/saturday_closing_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
