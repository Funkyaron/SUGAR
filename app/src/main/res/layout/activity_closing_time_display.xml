                android:textSize="@dimen/genericTextSize"/>
        </TableRow>
        <TableRow
            android:id="@+id/sunday_closing_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontalMarginClosingTimes"
