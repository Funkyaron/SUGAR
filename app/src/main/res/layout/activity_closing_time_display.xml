<?xml version="1.0" encoding="utf-8"?>
<!-- Important note : Due to the lack of borders or anything similar to that, I had to create two drawables which
     could be applied two two cells.Simply speaking, the first one is called "cell_border.xml" and shall be the
     background for a table cell which is displaying a certain weekday. The second one is used to highlight the
     times which are noted as closing times for the user. -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peter.sugar.ClosingTimeDisplayActivity">
    <TextView
        android:id="@+id/label_closing_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/verticalMargin"
        android:layout_marginLeft="@dimen/horizontalMargin"
        android:layout_marginRight="@dimen/horizontalMargin"
        android:gravity="center"
        android:text="@string/closing_time_announcment"
        android:textSize="@dimen/genericTextSize"/>
    <TableLayout
        android:id="@+id/closing_time_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="@dimen/horizontalMarginClosingTimes"
        android:layout_marginRight="@dimen/horizontalMarginClosingTimes"
        android:layout_below="@+id/label_closing_time"
        android:layout_centerHorizontal="true">
        <TableRow
            android:id="@+id/monday_closing_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontalMarginClosingTimes"
            android:layout_marginRight="@dimen/horizontalMarginClosingTimes"
            android:orientation="horizontal"
            android:weightSum="6">
            <TextView
                android:background="@drawable/cell_border"
                android:id="@+id/monday_closing_time_weekday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/monday"
                android:textSize="@dimen/genericTextSize"/>
            <TextView
                android:background="@drawable/cell_closing_time"
                android:id="@+id/monday_closing_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/test_time"
                android:textSize="@dimen/genericTextSize"
                android:paddingLeft="@dimen/table_padding"/>
        </TableRow>
        <TableRow
            android:id="@+id/tuesday_closing_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontalMarginClosingTimes"
            android:layout_marginRight="@dimen/horizontalMarginClosingTimes"
            android:orientation="horizontal"
            android:weightSum="6">
            <TextView
                android:background="@drawable/cell_border"
                android:id="@+id/tuesday_closing_time_weekday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/tuesday"
                android:textSize="@dimen/genericTextSize"/>
            <TextView
                android:background="@drawable/cell_closing_time"
                android:id="@+id/tuesday_closing_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/test_time"
                android:textSize="@dimen/genericTextSize"/>
        </TableRow>
        <TableRow
            android:id="@+id/wednesday_closing_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontalMarginClosingTimes"
            android:layout_marginRight="@dimen/horizontalMarginClosingTimes"
            android:orientation="horizontal"
            android:weightSum="6">
            <TextView
                android:background="@drawable/cell_border"
                android:id="@+id/wednesday_closing_time_weekday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/wednesday"
                android:textSize="@dimen/genericTextSize"/>
            <TextView
                android:background="@drawable/cell_closing_time"
