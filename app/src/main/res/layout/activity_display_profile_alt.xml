<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.peter.sugar.DisplayProfileActivityAlt">

    <RelativeLayout
        android:id="@+id/profile_name_displayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/text_bar_vertical_padding"
        android:paddingBottom="@dimen/text_bar_vertical_padding"
        android:paddingLeft="@dimen/text_bar_horizontal_padding"
        android:paddingRight="@dimen/text_bar_horizontal_padding">
        <TextView
            android:id="@+id/profile_name_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/profile_name_text_size"/>
        <Switch
            android:id="@+id/activate_profile_switch_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/profile_inactive_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_bar_vertical_padding"
        android:paddingBottom="@dimen/text_bar_vertical_padding"
        android:paddingLeft="@dimen/text_bar_horizontal_padding"
        android:paddingRight="@dimen/text_bar_horizontal_padding"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/profile_name_displayer"
        android:text="@string/profile_inactive"/>

    <TableLayout
        android:id="@+id/times_displayer_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name_displayer"
        android:paddingTop="@dimen/text_bar_vertical_padding"
        android:paddingBottom="@dimen/text_bar_vertical_padding"
        android:paddingLeft="@dimen/text_bar_horizontal_padding"
        android:paddingRight="@dimen/text_bar_horizontal_padding">
        <TableRow>
            <TextView
                android:text="@string/monday"/>
            <TextView
                android:id="@+id/monday_time_view_id"
                android:layout_marginLeft="@dimen/text_margin"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/tuesday" />
            <TextView
                android:id="@+id/tuesday_time_view_id"
                android:layout_marginLeft="@dimen/text_margin"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/wednesday" />
            <TextView
                android:id="@+id/wednesday_time_view_id"
                android:layout_marginLeft="@dimen/text_margin"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/thursday" />
            <TextView
                android:id="@+id/thursday_time_view_id"
                android:layout_marginLeft="@dimen/text_margin"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/friday" />
            <TextView
                android:id="@+id/friday_time_view_id"
                android:layout_marginLeft="@dimen/text_margin"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/saturday" />
            <TextView
                android:id="@+id/saturday_time_view_id"
                android:layout_marginLeft="@dimen/text_margin"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/sunday"/>
            <TextView
                android:id="@+id/sunday_time_view_id"
                android:layout_marginLeft="@dimen/text_margin"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/block_all_calls_text_bar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/times_displayer_id"
        android:paddingTop="@dimen/text_bar_vertical_padding"
        android:paddingBottom="@dimen/text_bar_vertical_padding"
        android:paddingLeft="@dimen/text_bar_horizontal_padding"
        android:paddingRight="@dimen/text_bar_horizontal_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/block_calls"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_vertical_margin"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_margin"
                android:text="@string/all"/>
            <CheckBox
                android:id="@+id/block_all_calls_checkbox_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/choose_contacts_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/list_item_vertical_margin"
            android:text="@string/choosecontacts"/>
    </LinearLayout>

    <Button
        android:id="@+id/back_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/finish"/>

</RelativeLayout>
