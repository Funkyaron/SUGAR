<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/entire_section"
        android:background="@drawable/list_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/generalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Profileinstellungen"
            android:textSize="25dp"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/chooseWeekDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mondayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MO"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tuesdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DI"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/wednesdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MI"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/thursdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DO"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/fridayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FR"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/saturdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SA"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/sundayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SO"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pickTime"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/descriptionStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="Start"
                    android:textSize="20dp"/>
                <LinearLayout
                    android:id="@+id/containsStartPickers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <NumberPicker
                    android:id="@+id/startHourPicker"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants" />
                <TextView
                    android:id="@+id/startCommataSeperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=":" />
                <NumberPicker
                    android:id="@+id/startMinutePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/endChooseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/descriptionEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="Ende"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <NumberPicker
                        android:id="@+id/endHourPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=":"/>
                    <NumberPicker
                        android:id="@+id/endMinutePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <Button
                android:id="@+id/adjust_time"
                android:background="@drawable/gradient_green"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zeit umstellen"/>
            <Button
                android:id="@+id/determineContacts"
                android:background="@drawable/gradient_blue"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:text="Kontakte auswÃ¤hlen"/>
    </LinearLayout>