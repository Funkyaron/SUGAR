<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editProfile_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/entire_section"
        android:background="@drawable/list_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/time_section"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/generalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Profileinstellungen"
            android:textSize="25dp"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/chooseWeekDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mondayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MO"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tuesdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DI"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/wednesdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MI"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/thursdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DO"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/fridayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FR"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/saturdayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SA"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/sundayRectangle"
                android:background="@drawable/weekday_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SO"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pickTime"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/descriptionStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginBottom="10dp"
                    android:text="Start"
                    android:textSize="20dp"/>
                <NumberPicker
                    android:id="@+id/startHourPicker"
                    android:layout_below="@id/descriptionStartTime"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:descendantFocusability="blocksDescendants" />
                <TextView
                    android:id="@+id/startCommataSeperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=":"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/startHourPicker" />
                <NumberPicker
                    android:id="@+id/startMinutePicker"
                    android:layout_below="@id/descriptionStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/startCommataSeperator"
                    android:descendantFocusability="blocksDescendants" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/endChooseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/descriptionEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ende"
                    android:textSize="20dp"/>
                <NumberPicker
                    android:id="@+id/endHourPicker"
                    android:layout_below="@id/descriptionEndTime"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:descendantFocusability="blocksDescendants" />
                <TextView
                    android:id="@+id/endCommataSeperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=":"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/endHourPicker" />
                <NumberPicker
                    android:id="@+id/endMinutePicker"
                    android:layout_below="@id/descriptionEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/endCommataSeperator"
                    android:descendantFocusability="blocksDescendants" />
            </RelativeLayout>
        </LinearLayout>
            <Button
                android:id="@+id/adjust_time"
                android:background="@drawable/gradient_green"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zeit umstellen"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contactsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/determineContacts"
                android:background="@drawable/gradient_blue"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:text="Kontakte auswählen"/>
        </LinearLayout>
        <TextView
            android:id="@+id/blankSpace"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        </LinearLayout>
</ScrollView>
